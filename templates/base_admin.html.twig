<!DOCTYPE html>
<html lang="ru">
    {% include 'admin_parts/header.html.twig' %}
    <body>
    <div class="mywrapper">

        <div class="blokfull_menu ">
            <div class="logo"></div>

            <div class="menu_telo">
                <div class="menu_buttons">
                    <a href="{{ path('app_admin_article') }}" class="button15">Записи</a>
                </div>
                <div class="accaount_block">
                    <a href="{{ path('app_home') }}" class="button15">На сайт</a>
                    {% if app.user %}
                        <div class="mb-3" style="display: inline-block">
                            Вы авторизованы, как {{ app.user.FIO }}, <a href="{{ path('app_logout') }}">Выход</a>
                        </div>
                    {% endif %}
                </div>

            </div>
        </div>

        <div class="telo display_flex">
            <!--  Вставили левое меню  -->
            <div class="left_nav">
                {% if app.user %}
                    {% include "admin_parts/left_arm.html.twig" %}
                {% endif %}
            </div>
            <div class="workspace">
    {% if app.session.flashBag.peek('flash_message')|length > 0 %}
        <div class="row">
            <div class="col-12">
                <div class="alert alert-success" role="alert">
                    {% for message in app.flashes('flash_message') %}
                        <p>{{ message }}</p>
                    {% endfor %}
                </div>
            </div>
        </div>
    {% endif %}

    <div class="col-6">
        <h2>{{ page }}</h2>
    </div>
    {% block body %}




    {% endblock %}
    {% include 'admin_parts/footer.html.twig' %}

