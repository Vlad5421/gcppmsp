{% extends 'base.html.twig' %}

{% block title %}Управление статьями{% endblock %}

{% block body %}


                <div class="row border flex-md-row mb-4 shadow-sm bg-white p-4">
                    <div class="col-12 p-0">
                        <div class="admin-header-with-button">
                            <h1>Управление Статьями</h1>
                            <div><a class="btn btn-primary" href="#">Создать новую статью</a></div>
                        </div>

                        <form>
                            <div class="input-group mb-3">
                                <input type="text"
                                       name="q"
                                       class="form-control"
                                       placeholder="Найти..."
                                       value=""
                                >
                                <div class="input-group-append">
                                    <button type="submit" class="btn btn-outline-secondary"><i class="fa fa-search"></i></button>
                                </div>
                            </div>
                            <div class="input-group mb-3">
                                <select class="mdb-select md-form" name="pageCount" >
                                    <option value="" disabled selected>Сколько элементов на страницу</option>
                                    <option value="3">3</option>
                                    <option value="5">5</option>
                                    <option value="10">10</option>
                                </select>
                            </div>
                        </form>


                        <table class="table table-striped">
                            <thead>
                            <tr>
                                <th>Услуга</th>
                                <th>Название</th>
                                <th>Стоимость</th>
                                <th>продолжительность</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for service in collection %}
                                <tr>
                                    <td><a href="{{ path('app_admin_service_edit', {id: service.id}) }}">{{ service.id }}</a></td>
                                    <td>{{ service.name }}</td>
                                    <td>{{ service.price }}</td>
                                    <td>{{ service.duration }}</td>
                                </tr>

                            {% endfor %}

                            </tbody>
                        </table>
                        {{ knp_pagination_render(collection) }}
                    </div>
                </div>



{% endblock %}
