                                </select>
                            </div>
                        </form>


                        <table class="table table-striped">
                            <thead>
                            <tr>
                                <th>id</th>
                                <th>Название</th>
                                <th>Стоимость</th>
                                <th>Продолжительность</th>
                                <th>удалить</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for service in collection %}
                                <tr>
                                    <td>{{ service.id }}</td>
                                    <td><a href="{{ path('app_admin_service_edit', {id: service.id}) }}">{{ service.name }}</a></td>
                                    <td>{{ service.price }}</td>
                                    <td>{{ service.duration }}</td>
                                        <td><span class="del_service" style="cursor: pointer" data-serv-id="{{ service.id }}" >удалить</span></td>
                                </tr>

                            {% endfor %}

                            </tbody>
                        </table>
                        {{ knp_pagination_render(collection) }}
