<!DOCTYPE html>
<html lang="ru">
    {% include 'temp/head.html.twig' %}


<body>
<div class="all">
    {% include 'temp/menu1.html.twig' %}
    <div class="big_content">
        {% include 'temp/left_border.html.twig' %}
        <!-- Блок содержимого центрального блока -->
        <div class="content">
            {% if app.session.flashBag.peek('flash_message')|length > 0 %}
                <div class="row">
                    <div class="col-12">
                        <div class="alert alert-success" role="alert">
                            {% for message in app.flashes('flash_message') %}
                                <p>{{ message }}</p>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            {% endif %}
            {% block body %}



            {% endblock %}


        </div>
        <!-- Конец блока содержимого центрального блока -->
        {% include 'temp/right_border.html.twig' %}
    </div>
</div>
<div id="to_scripts">
    <script>
        $(function () {
            $('.custom-file' ).each(function () {
                const $container = $(this);

                $container.on('change', '.custom-file-input', function (event) {
                    $container.find('.custom-file-label').html(event.currentTarget.files[0].name);
                });
            });
        });
    </script>
</div>
</body>
</html>